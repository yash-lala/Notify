<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/allgroups_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/allgroups_noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textColor="@color/GeelaNeela"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:text="You have no groups:( \n *cough*Worthless*cough*\n Create one today!"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/allgroups_recycler"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/allgroups_FAB"
        android:src="@drawable/silvergroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        />

    </android.support.design.widget.CoordinatorLayout>